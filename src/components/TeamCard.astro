---
import type { TeamMember } from "../data/team/team";
import { Image } from "astro:assets";
const { member } = Astro.props as { member: TeamMember };
import GithubIcon from "../assets/icons/github.svg";
import LinkedInIcon from "../assets/icons/IconLinkedin.svg";
//import IconWeb from "../assets/icons/iconweb.svg";
---

<div
    class="flex w-full max-w-[420px] items-center gap-6 rounded-lg border border-accent/30 bg-black/50 p-3 transition-all duration-300 hover:border-accent/50 hover:shadow-[0_0_20px_rgba(247,199,123,0.15)]"
>
    <Image
        class="h-[120px] w-[120px] shrink-0 rounded object-cover"
        src={member.avatar}
        alt={member.name}
        loading="eager"
        height={120}
        width={120}
    />
    <div class="flex-1 text-left">
        <h3 class="mb-1.5 text-xl font-semibold text-heading2">
            {
                member.website ? (
                    <a
                        href={
                            member.website.startsWith("http")
                                ? member.website
                                : `https://${member.website}`
                        }
                        target="_blank"
                        class="underline hover:text-accent transition-colors"
                    >
                        {member.name}
                    </a>
                ) : (
                    member.name
                )
            }
        </h3>
        <p class="mb-4 text-[0.95rem] text-neutral-400">{member.role}</p>
        <div class="flex gap-4">
            {
                member.github && (
                    <a
                        href={member.github}
                        target="_blank"
                        aria-label="GitHub"
                        class="inline-flex transition-opacity hover:opacity-70"
                    >
                        <GithubIcon class="h-6 w-6 fill-heading2" />
                    </a>
                )
            }
            {
                member.linkedIn && (
                    <a
                        href={member.linkedIn}
                        target="_blank"
                        aria-label="LinkedIn"
                        class="inline-flex transition-opacity hover:opacity-70"
                    >
                        <LinkedInIcon class="h-6 w-6 text-heading2" />
                    </a>
                )
            }
            {
                member.website && (
                    <a
                        href={
                            member.website.startsWith("http")
                                ? member.website
                                : `https://${member.website}`
                        }
                        target="_blank"
                        aria-label="Website"
                        class="inline-flex transition-opacity hover:opacity-70"
                    >
                    </a>
                )
            }
        </div>
    </div>
</div>
